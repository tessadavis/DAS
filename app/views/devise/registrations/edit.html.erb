
<div class="row">
  <div class="col-md-4">

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, class: "well"}) do |f| %>
      <%= devise_error_messages! %>

      <fieldset>
            <legend>Edit user</legend>
            <div class="form-group">
              <%= f.input :email %>
              <%= f.input :password %>
              <%= f.input :password_confirmation %>
              <%= f.input :current_password %>
              <%= f.button :submit, "Update", class: "btn btn-success" %>
            </div>
          </fieldset> 
    <% end %>

  </div>
  <div class="col-md-6">
    <h3>Unhappy? - Cancel my account</h3>

    <%= button_to "Cancel my account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %>
  </div>
</div>

<%= link_to "Back", :back %>
