<div class="page-header">
  <h1 >All contacts</h1>
</div>

<%= link_to "Add a new contact", new_contact_path, class: "btn btn-success" %>

<% @contacts.each do |contact| %>

  <div class="contact">
    <strong>Name: <%= contact.name %></strong>
    <p>Phone number: <%= contact.phone %></p>
    <p>Category: <%= contact.category %></p>
    <p>Area: <%= contact.area %></p>
    <p>Website: <%= contact.website %></p>
    <p>Email: <%= contact.email %></p>
    <p>Info: <%= contact.info %></p>

    <div class="meta">
      <%= link_to "Show", contact %> |
      <span class="admin">
        <%= link_to "Edit", edit_contact_path(contact) %> |
        <%= link_to "Delete", contact, method: :delete, data: { confirm: "Are you sure you want to delete this contact?"} %>
      </span>  
    </div>
  </div>


<% end %>



