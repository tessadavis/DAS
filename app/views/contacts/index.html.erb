<div class="page-header">
  <h1 >All contacts</h1>
</div>

<%= link_to "Add a new contact", new_contact_path, class: "btn btn-success" %>

<% @contacts.each do |contact| %>
  <div class="contactrow">
    <div class="row">
      <div class="contact col-md-10">  
        <strong>Name: <%= link_to contact.name + " (click to show contact)", contact, :target => '_blank'%> </strong>
        <% if contact.category %>
          <p>Category: <%= contact.category %>
        <% end %>
        <% if contact.area %>
          <p>Area: <%= contact.area %></p>
        <% end %>

        <% if contact.user == current_user %>
          <div class="meta">
            <span class="admin">
                <%= link_to "Edit", edit_contact_path(contact) %>  |
              
                <%= link_to "Delete", contact, method: :delete, data: { confirm: "Are you sure you want to delete this contact?"} %>
             </span>
          </div>
        <% end %>
      </div>

      
    </div>
  </div>
<% end %>





